<launch>
  <arg name='load_map' default='false' />
  <arg name='localize_only' default='false' />

  <node name="orb_slam2_rgbd" pkg="orb_slam2_ros" type="orb_slam2_ros_rgbd" output="screen">

       <remap from="/camera/rgb/image_raw" to="/camera/rgb/image_raw" />
       <remap from="/camera/depth_registered/image_raw" to="/camera/depth_registered/image_raw" />

       <param name="publish_pointcloud" type="bool" value="true" />
       <param name="publish_pose" type="bool" value="true" />
       <param name="localize_only" type="bool" value="$(arg localize_only)" />
       <param name="reset_map" type="bool" value="false" />

       <!-- static parameters -->
       <param name="load_map" type="bool" value="$(arg load_map)" />
       <param name="map_file" type="string" value="$(find waypoint_navigation)/maps/orbslam/map.bin" />
       <param name="settings_file" type="string" value="$(find waypoint_navigation)/config/Asus.yaml" />
       <param name="voc_file" type="string" value="$(find orb_slam2_ros)/orb_slam2/Vocabulary/ORBvoc.txt" />

       <param name="pointcloud_frame_id" type="string" value="map" />
       <param name="camera_frame_id" type="string" value="camera_link_slam" />
       <param name="min_num_kf_in_map" type="int" value="5" />
  </node>

  <!-- <node name='map_to_odom' type='map_to_odom.py' pkg='waypoint_navigation' output='screen' /> -->

</launch>
