<launch>
  <!-- Turtlebot -->
  <include file='$(find turtlebot_bringup)/launch/minimal.launch' />

  <!-- Camera -->
  <include file='$(find openni2_launch)/launch/openni2.launch'>
    <arg name='publish_tf' value='false' />
  </include>

  <!-- Localization -->
  <include file='$(find waypoint_navigation)/launch/orbslam.launch'>
    <arg name='localize_only' value='true' />
    <arg name='load_map' value='true' />
  </include>

  <!-- Teleop -->
  <node name='joy' pkg='joy' type='joy_node' />
  <include file="$(find turtlebot_teleop)/launch/logitech.launch" />

  <!-- Visualization -->
  <node pkg='rviz' name='rviz' type='rviz' args="-d $(find waypoint_navigation)/rviz/gather_coordinates.rviz" />

</launch>
